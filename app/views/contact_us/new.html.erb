

<div align="center">
  <h3>Contact Us! We'd love to hear your questions or comments.</h3>

  <div class="form-group">

      <%= simple_form_for @contact, url: contact_us_path, method: :post, html: {class: 'form-horizontal' } do |f| %>
        <%= f.input :name    %>
        <%= f.input :email   %>
        <%= f.input :message %>
        <div class= "hidden">
          <%= f.input :nickname, hint: 'Leave this field blank!' %>
        </div>
        <div>
          </br>
          <%= f.button :submit, 'Send message', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
