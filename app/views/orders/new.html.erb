<div id="checkout_page"
<h1> Checkout </h1>

<table id="checkout_table2">

    <tr>
      <th>Item Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total  </th>
    </tr>

    <% cart.items.each do |item_id, quantity| %>
    <tr>
      <td> <%= cart.item(item_id).name %>  </td>
      <td> <%= quantity %> </td>
      <td> <%= number_to_currency(cart.item(item_id).price, precision: 2) %> </td>
      <td> <%= number_to_currency(cart.line_item_price(item_id, quantity)) %> </td>
    </tr>
    <% end %>
  <tr>
    <td>  Subtotal </td>
    <td>  </td>
    <td>  </td>
    <td> <%= number_to_currency(@subtotal) %> </td>
  </tr>

  <tr>
    <td>  Tax </td>
    <td>  </td>
    <td>  </td>
    <td> <%= number_to_currency(@tax) %> </td>
  </tr>

  <tr>
    <td>  Total </td>
    <td>  </td>
    <td>  </td>
    <td> <%= number_to_currency(@total) %> </td>
  </tr>
</table>

  <h2> Pick Up or Delivery?</h2>
<br/>

<%= form_tag '/orders', method: :post do %>
<%= button_tag(:class => "btn btn-default btn-sm", :id => "pickup_btn") do %>
   Pick Up <span class="glyphicon glyphicon-user" ></span>
<% end %>
<% end %>
<br/>
<h3> or </h3>
  <% if @addresses.any? %>
    <%= form_tag addresses_path, method: :get do %>
    <%= button_tag(:class => "btn btn-default btn-sm", :id => "delivery_btn") do %>
      Delivery  <span class="glyphicon glyphicon-user" ></span>
       <% end %>
       <% end %>
  <% else %>
    <%= form_tag new_address_path, method: :get do %>
    <%= button_tag(:class => "btn btn-default btn-sm", :id => "delivery_btn") do %>
      Delivery  <span class="glyphicon glyphicon-user" ></span>
       <% end %>
       <% end %>
  <% end %>


</div>
