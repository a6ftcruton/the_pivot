<h2>Please tell us where you would like us to deliver your food</h2>

<%= form_for(@address) do |f| %>

  <div class="field">
    <%= f.label :street_address %><br>
    <%= f.text_field :street_address %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :zip %><br>
    <%= f.text_field :zip %>
  </div>
</br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</br>
<div class="button">
  <%= form_tag addresses_path, method: :get do %>
    <%= button_tag(:class => "btn btn-default btn-sm", :id => "cart_button") do %>
       choose an existing address <span class="glyphicon glyphicon-list-alt" ></span>
    <% end %>
  <% end %>
