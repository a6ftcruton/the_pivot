<h1>Categories</h1>

<% @category.each do |c| %>
  <p>
  <h3><%= c.name %></h3>
  </p>
  <ul>
    <% c.items.each do |item| %>
  <li><%= item.name %>
      <%= item.description %>
      <%= number_to_currency(item.price) %>
			<%= link_to "Add to cart", add_item_path(item_id: item.id) %></li>
    <% end %>
  </ul>
<% end %>
