
<h1>Categories</h1>
<div class='container'>
  <% @category.each do |c| %>
    <p>
    <h3><%= c.name %></h3>
    </p>
    <div class="row">
      <% c.items.active.each_with_index do |item, index| %>

        <% if index > 2 && index % 3 == 0 %>
          </div><div class="row">
        <% end %>

        <div class='col-md-4'>
          <% index %>
          <%= item.name %> -
          <%= item.description %>
          <%= number_to_currency(item.price) %>
    			<%= link_to "Add to cart", add_item_path(item_id: item.id) %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<% @category.each do |c| %>
<h2> <%= c.name %> </h2>
<div class="row">
 <% c.items.each do |item| %>

  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img data-src="holder.js/300x300" alt="...">
      <div class="caption">
        <p> <%= item.name %> </p>
        <p>...</p>
        <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
      </div>
    </div>

  </div>
<% end %>
</div>
<% end %>
