	<div class="store-header">
	    <div class="store-header-image">
	  		<%= image_tag @store.image.url(:medium) %>
	  	</div>
	  	<div class="store-name">
	  		<h2> <%= @store.name.capitalize %> </h2>
	  	</div>
	</div>
  <div class="store-description">
  	<%= @store.description %>
 	</div>
 	<div class="store-items-container">
 		<% @store.items.each do |item| %>
 			<div class="store-item">
 				<%= item.name %>
 				<%= image_tag item.image.url(:medium) %><br/>
 				<%= item.description %>

 			</div>
 		<% end %>
 	</div>
