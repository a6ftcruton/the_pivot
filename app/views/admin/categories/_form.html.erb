<div id="form">
  <%= form_for [:admin, @category] do |form| %>
    <%= render "layouts/errors", object: @category%>
    <div id="name">
      <p>
        <div class='labels'><%= form.label :name %>:</div>
      <%= form.text_field :name %>
      </p>
      <p>
        <div class='labels'><%= form.label :description %>:</div>
      <%= form.text_area :description %>
      </p>
    </div>
    <%= form.submit 'Save' %>
  <% end %>
</div>

<div class='btn-toolbar' role='toolbar'>
  <div class='btn-group'>
    <%= button_to "Delete this item", admin_category_path(@category), method: :delete, data: { confirm: 'Are you sure you wish to delete?' } %>
  </div>
  <div class='btn-group'>
    <%= button_to "Cancel", admin_categories_path, method: 'get' %>
  </div>
</div>
